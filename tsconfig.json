{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "allowJs": true,
    "strictPropertyInitialization": false,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true ,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["/"],
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@atoms/*": ["atoms/*"]
    }
  }
}
